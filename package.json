{
  "name": "qa-challenge",
  "version": "1.0.0",
  "description": "Automated UI test challenge with Playwright and coverage reporting",
  "main": "index.js",
  "scripts": {
     "instrumentar": "npx nyc instrument public/js/validaciones.js public/js-instrumented/validaciones.js",
    "test": "npx playwright test",
    "merge": "npx nyc merge .nyc_output coverage/coverage-final.json",
    "coverage": "npx nyc report --report-dir=coverage --reporter=html",
    "todo": "npm run instrumentar && npm run test && npm run merge && npm run coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.21",
    "babel-plugin-istanbul": "^7.0.0",
    "nyc": "^17.1.0",
    "serve": "^14.2.4"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "extension": [
      ".js"
    ],
    "include": [
      "public/js-instrumented/validaciones.js"
    ],
    "exclude": [
      "tests",
      "mocks"
    ]
  }
}
